<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:fontFamily">@font/arima_madurai</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/amita</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="pagerTitleStripText">
        <item name="android:fontFamily">@font/arima_madurai</item>
    </style>

    <style name="switchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/button_normal</item>
        <item name="colorSwitchThumbNormal">@color/text</item>
        <item name="android:colorForeground">@color/main_background</item>
    </style>

    <style name="spinner" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/arima_madurai</item>
    </style>
    <style name="NonFullscreenCSettings" parent="AppTheme">
        <item name="windowActionBarOverlay">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowBackground">@color/main_background</item>
    </style>
    <!-- ToolBar -->
    <!-- CardView -->
    <!-- Button styles -->

</resources>
